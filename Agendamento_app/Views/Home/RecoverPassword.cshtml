@{
    ViewBag.Title = "Recuperar Senha";
    Layout = "";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>Recuperar Senha</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <style>
        body {
            background: linear-gradient(135deg, #3a8dff, #7cb3ff);
            height: 100vh;
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            backdrop-filter: blur(10px);
            background-size: cover;
            background-color: #3a8dff; 
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .card {
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 40px 30px;
            width: 100%;
            max-width: 400px;
            color: white;
            box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
            text-align: center;
        }

            .card h3 {
                margin-bottom: 30px;
                font-weight: 300;
            }

        .form-control {
            border: 1px solid #fff;
            border-radius: 10px;
            color: white;
        }

            .form-control::placeholder {
                color: #e0e0e0;
            }

        .btn-warning {
            background-color: #ffc107;
            border: none;
            border-radius: 10px;
            padding: 10px;
        }

            .btn-warning:hover {
                background-color: #e0a800;
            }

        a {
            color: #ffffffcc;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }

        label {
            color: #e0e0e0;
            float: left;
            margin-bottom: 5px;
        }

        .form-check-label {
            color: #ccc;
        }

        .form-check {
            text-align: left;
        }

    </style>
</head>
<body class="bg-light">
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow-lg p-4" style="width: 350px;">
            <h3 class="text-center mb-4">Recuperar Senha</h3>

            <div id="erro" class="alert alert-danger d-none"></div>
            <div id="sucesso" class="alert alert-success d-none"></div>

            <form asp-action="RecoverPassword" method="post">
                <div class="mb-3">
                    <label for="email" class="form-label">E-mail cadastrado</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Digite seu e-mail" required />
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-warning">Enviar recuperação</button>
                </div>
            </form>
            <div class="text-center mt-3">
                <a asp-controller="Home" asp-action="Index">Já tem uma conta? Faça login</a>
            </div>
        </div>
    </div>
</body>
</html>
