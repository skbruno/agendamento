@{
    ViewBag.Title = "Criar Conta";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>Criar Conta</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>
<body class="bg-light">
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow-lg p-4" style="width: 350px;">
            <h3 class="text-center mb-4">Criar Conta</h3>

            <div id="erro" class="alert alert-danger d-none"></div>
            <div id="sucesso" class="alert alert-success d-none"></div>

            <form id="formCriarConta">
                <div class="mb-3">
                    <label for="nome" class="form-label">Nome</label>
                    <input type="text" class="form-control" id="nome" placeholder="Digite seu nome" required />
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">E-mail</label>
                    <input type="email" class="form-control" id="email" placeholder="Digite seu e-mail" required />
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Senha</label>
                    <input type="password" class="form-control" id="password" placeholder="Digite sua senha" required />
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-success">Criar Conta</button>
                </div>
            </form>
            <div class="text-center mt-3">
                <a asp-controller="Home" asp-action="Index">Já tem uma conta? Faça login</a>
            </div>
        </div>
    </div>

    <script>
        document.getElementById("formCriarConta").addEventListener("submit", function (e) {
            e.preventDefault();

            const nome = document.getElementById("nome").value;
            const email = document.getElementById("email").value;
            const password = document.getElementById("password").value;

            axios.post("https://localhost:7100/api/Usuario/api/auth/register", {
                nome: nome,
                email: email,
                password: password
            })
            .then(response => {
                const sucessoDiv = document.getElementById("sucesso");
                sucessoDiv.classList.remove("d-none");
                sucessoDiv.textContent = "Conta criada com sucesso!";

                document.getElementById("erro").classList.add("d-none");

                // Redirecionar após alguns segundos, se quiser:
                setTimeout(() => {
                    window.location.href = "/Home/Login";
                }, 2000);
            })
            .catch(error => {
                const erroDiv = document.getElementById("erro");
                erroDiv.classList.remove("d-none");
                erroDiv.textContent = "Erro ao criar conta. Verifique os dados.";
                document.getElementById("sucesso").classList.add("d-none");
            });
        });
    </script>

</body>
</html>
